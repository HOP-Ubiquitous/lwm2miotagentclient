<?xml version="1.0" encoding="utf-8"?>
<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://openmobilealliance.org/tech/profiles/LWM2M.xsd">
    <Object ObjectType="MODefinition">
        <Name>SmartSpot</Name>
        <Description1>Description: This is the Smart Spot configuration lwM2M Object</Description1>
        <ObjectID>10001</ObjectID>
        <ObjectURN>urn:oma:lwm2m:ext:10000</ObjectURN>
        <MultipleInstances>Multiple</MultipleInstances>
        <Mandatory>Optional</Mandatory>
        <Resources>
            <Item ID="0">
                <Name>Last Device information</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Optional</Mandatory>
                <Type>String</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>Shows up the information of the latest device found.</Description>
            </Item>
            <Item ID="1">
                <Name>Devices found in the last min</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Optional</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>Number of devices found in the last minute.</Description>
            </Item>
            <Item ID="2">
                <Name>Devices found in the last 10min</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Optional</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>Number of devices found in the last 10 minutes.</Description>
            </Item>
            <Item ID="3">
                <Name>Devices found in the last hour</Name>
                <Operations>R</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Optional</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>Number of devices found in the last hour.</Description>
            </Item>
            <Item ID="4">
                <Name>Restrict last device info</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Optional</Mandatory>
                <Type>Boolean</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>If enabled, last device information resource will push observations about a device only one time at minute instead of each time is seen.</Description>
            </Item>
            <Item ID="5">
                <Name>Restrict detection with RSSI threshold</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Optional</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>Only WiFi detected devices with an RSSI value under this threshold will be considered.</Description>
            </Item>
            <Item ID="6">
                <Name>Reset Values</Name>
                <Operations>E</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Optional</Mandatory>
                <Type>Opaque</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description>Reset the values of the three counters.</Description>
            </Item>
        </Resources>
        <Description2></Description2>
    </Object>
</LWM2M>
